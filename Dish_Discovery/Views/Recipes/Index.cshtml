@model IEnumerable<RecipeViewModel>

@{
    ViewData["Title"] = "Recipes";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipes</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Madimi+One&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Madimi One', sans-serif; /* Apply the Madimi One font to the entire page */
            background-image: url('https://media.istockphoto.com/id/469839680/vector/vintage-kitchen-tools-pattern.jpg?s=612x612&w=0&k=20&c=fBsq3rbVLT89w6Vr8AI79D9n_hBOFjb-DjLscuSZAlU='); /* Replace 'your-image-url.jpg' with the URL of your background image */
            background-size: auto; /* Adjusts the background image size to cover the entire body */
            background-repeat: repeat; /* Prevents the background image from repeating */
            background-attachment: fixed; /* Ensures background stays fixed while scrolling */
        }
    </style>
</head>
<body>
    <div>
        <h1>Recipes🍴</h1> 
        <p>
            <a asp-action="Create">Create New </a> <span style="color: orange;">➕</span>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)  <span style="color: orange;">🍽️</span>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)  <span style="color: orange;">🧑🏻‍🍳</span>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Types) <span style="color: orange;">🌇🌆🌃</span>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time) needed <span style="color: orange;">⏳</span>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Servings) <span style="color: orange;">🍱</span>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Calories) per Serving <span style="color: orange;">🔥</span>
                    </th>
                    <th>
                        Actions <span style="color: orange;">⚡</span> 
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var viewModel in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => viewModel.Name)
                        </td>
                        <td>
                            <a asp-controller="Authors" asp-action="Details" asp-route-id="@viewModel.Author.Id">@viewModel.Author.Nickname</a>
                        </td>
                        <td>
                            @foreach (var genre in viewModel.Types)
                            {
                                <div>
                                    <a asp-controller="Types" asp-action="Details" asp-route-id="@genre.Id">@genre.Name</a>
                                </div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => viewModel.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => viewModel.Servings)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => viewModel.Calories)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@viewModel.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@viewModel.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@viewModel.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
